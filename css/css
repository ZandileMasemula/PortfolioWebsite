/* Resetting Default Styles (Optional but Recommended) */
* {
    box-sizing: border-box; /* Include padding and border in element's total width and height */
    margin: 0;
    padding: 0;
  }
  
  /* Base Styles for Images and Videos */
  img, video {
    max-width: 100%; /* Make images and videos responsive */
    height: auto;    /* Maintain aspect ratio */
    display: block;  /* Remove extra spacing below inline elements */
  }
  
  /* Optional: Limit the width of the content containers */
  .content, .another-content {
    max-width: 800px; /* Adjust as needed */
    margin: 0 auto;  /* Center the content */
    padding: 20px;    /* Add some padding for spacing */
  }
  
  /* Optional: Additional styling for videos */
  video {
    margin-bottom: 20px; /* Add space below videos */
  }
  
  /* Responsive Adjustments (Media Queries) */
  @media (max-width: 600px) {
    /* On smaller screens (e.g., mobile), make content containers full-width */
    .content, .another-content {
      max-width: 100%;
      padding: 10px;
    }
  }